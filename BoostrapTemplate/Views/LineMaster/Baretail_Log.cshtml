<div>
    <table class="display compact" id="Table">
        <thead>
            <tr>
                <th>
                    Sr.No
                </th>
                <th>
                    Line Name
                </th>
                <th>
                    Seq No
                </th>
                <th>
                   Item Id
                </th>
                <th>
                    BIW No
                </th>
                <th>
                    Status
                </th>
                <th>
                   Time Stamp
                </th>
            </tr>
        </thead>
        <tbody>
            @{ int i = 1;}
            @foreach (var item in Model)
            {
            <tr class="data-row">

                <td>@i</td>

                <td>
                    @Html.DisplayFor(modelItem => item.LineName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SeqNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Itemid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Biwno)
                </td>
                <td>
                    <button class="Chenge" data-id="@item.StatusID" style="color: white; border: none; width: 110px;">@item.StatusID</button>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeStamp)
                </td>


            </tr>
 i++;
            }
        </tbody>
    </table>
</div>

