@model IEnumerable<OMS_Web.ViewModels.Lines.LOTViewModel>
@{
    //Layout = "~/Pages/Shared/_Layout.cshtml";
    ViewData["Title"] = "Baretail Log";

}


<style>
    /* CSS for styling the page buttons */
    .pagination {
        list-style: none;
        display: flex;
        margin: 0;
        padding: 0;
    }

        .pagination li {
            margin: 0 5px;
        }

        .pagination a {
            display: block;
            padding: 10px;
            text-decoration: none;
            color: #333;
            background-color: #f4f4f4;
            border: 1px solid #ccc;
            border-radius: 4px;
            transition: background-color 0.3s, color 0.3s;
        }

            .pagination a.current-page {
                background-color: #337ab7;
                color: #fff;
            }

            .pagination a:hover {
                background-color: #337ab7;
                color: #fff;
            }

    .nav-tabs .nav-link.active {
        background-color: #00BCD4;
    }
</style>


<ul class="nav nav-tabs" style="margin-bottom: 15px; margin-top: 10px; font-size:large;">
    <li class="nav-item">
        <a class="nav-link aaa active" aria-current="page" href="#" data-id="1">Front Floor</a>
    </li>
    <li class="nav-item">
        <a class="nav-link aaa" href="#" data-id="2">Front End</a>
    </li>
    <li class="nav-item">
        <a class="nav-link aaa" href="#" data-id="3">Rear Floor</a>
    </li>
    <li class="nav-item">
        <a class="nav-link aaa" href="#" data-id="4">Body Side Right Hand</a>
    </li>
    <li class="nav-item">
        <a class="nav-link aaa" href="#" data-id="5">Body Side Left Hand</a>
    </li>
</ul>

